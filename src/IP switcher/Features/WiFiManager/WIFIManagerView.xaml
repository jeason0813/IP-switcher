<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Resources="clr-namespace:Deucalion.IP_Switcher.Features.IpSwitcher.Resources" x:Class="Wireless_Network_Manager.WiFiManagerView" Width="936" Height="381"
        >

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource defaultTextBlock}">
                <Setter Property="MinWidth" Value="100"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="0,0,2,66" Height="344">
        <Rectangle Margin="0,0,16,10"/>

        <Expander Foreground="{StaticResource Foreground}" 
                      Header="Wireless Networks" 
                      IsExpanded="True"
                      Template="{StaticResource StretchyExpander}" Margin="0,0,435,0">
            <ListBox x:Name="lbConsoleStream" HorizontalAlignment="Left" Height="261" Margin="10,0,0,0" VerticalAlignment="Top" Width="156" SelectionChanged="SSIDSelect" Style="{DynamicResource ExpanderListBox}">
                <ListBox.ItemBindingGroup>
                    <BindingGroup/>
                </ListBox.ItemBindingGroup>
            </ListBox>
        </Expander>
        <TextBox x:Name="txtHeaders" HorizontalAlignment="Left" Height="261" Margin="186,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Background="White" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" MaxLines="1" BorderThickness="1,1,0,1" />
        <TextBox x:Name="txtData" HorizontalAlignment="Left" Height="261" Margin="317,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="351" Background="White" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" MaxLines="1" FontWeight="Bold" BorderThickness="0,1,1,1"/>
        <Button x:Name="btnDelete" Content="Delete selected..." HorizontalAlignment="Left" Margin="10,284,0,0" VerticalAlignment="Top" Width="95" Click="btnDelete_Click" IsEnabled="False" BorderBrush="{DynamicResource BorderBrushNormal}" />

        <TextBlock TextWrapping="Wrap" Text="{x:Static Resources:IpSwitcherViewLoc.CurrentSettings}" VerticalAlignment="Top" Style="{DynamicResource Header}"  Margin="186,0,219,0"  />

    </Grid>
</UserControl>
